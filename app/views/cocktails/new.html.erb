<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1547059470-3b0c7cd958a4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
  <div class="banner-content">
    <h1>My new cocktail</h1>
    <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
    <%= link_to "Back to cocktails", cocktails_path, {:class=>"btn btn-default"} %>
    <% end %>
  </div>
</div>




