<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1523905491727-d82018a34d75?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
  <div class="banner-content">
    <h1>My cocktails</h1>
    <p>Discover some amazing cocktails</p>
    <a class="btn btn-primary btn-lg" href="cocktails/new">Add a new cocktail</a>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1531387367216-681093c0279b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60)">
      <div class="cocktail-link"> <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    </div>
   </div>

  <% end %>
</div>
</div>
